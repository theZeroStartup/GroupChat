<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NewChatActivity">

    <EditText
        android:id="@+id/etGroupName"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Group name"
        android:textColorHint="#616161"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/tvMembers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Members"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@id/etGroupName"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:layout_marginHorizontal="@dimen/_15sdp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMembers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:layout_below="@id/tvMembers"
        android:layout_above="@id/btnCreate"
        tools:itemCount="3"
        tools:listitem="@layout/item_members" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/fabAdd"
        android:layout_alignBottom="@id/fabAdd"
        android:textColor="@color/black"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_toStartOf="@id/fabAdd"
        android:text="Create Group"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_15sdp"
        android:background="@color/blue"
        android:src="@drawable/ic_baseline_add_24"
        android:contentDescription="@string/new_chat" />

</RelativeLayout>